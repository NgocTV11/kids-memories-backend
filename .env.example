# Database
DATABASE_URL="postgresql://user:password@localhost:5432/kids_memories?schema=public"

# JWT
JWT_SECRET="your-secret-key-change-this-in-production"
JWT_EXPIRES_IN="7d"

# Frontend URL (for CORS)
FRONTEND_URL="http://localhost:3001"

# AWS S3 Configuration (Required for production)
# Nếu không có, sẽ fallback về local storage (không an toàn cho Railway/Vercel)
AWS_ACCESS_KEY_ID="your-aws-access-key-id"
AWS_SECRET_ACCESS_KEY="your-aws-secret-access-key"
AWS_S3_BUCKET_NAME="kids-memories-uploads"
AWS_REGION="ap-southeast-1"

# Port
PORT=3000

# Node Environment
NODE_ENV="development"
